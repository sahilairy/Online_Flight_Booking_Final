@model Online_Flight_Booking_Final.Models.Flight

@{
    ViewData["Title"] = "Details";
}

<h1>Please Confirm the flight details and book</h1>

<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FlightNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlightNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.From)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.From)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.To)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.To)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Scheduled)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Scheduled)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("passenger")) {
    <a class="btn btn-success" href="/FlightBookings/Create/@Model.Id">Confirm Booking</a> 
    }
</div>
